{
  "name": "grafeno",
  "version": "1.0.3",
  "description": "Aplicaci√≥n para despliegue de entornos simulados de pentesting",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist:deb": "electron-builder --linux deb",
    "dist:mac": "electron-builder --mac",
    "dist:rpm": "electron-builder --linux rpm"
  },
  "keywords": [
    "cibersecurity",
    "ciberseguridad",
    "pentesting",
    "red team",
    "hack",
    "hacking"
  ],
  "author": {
    "name": "Offensive Skills",
    "email": "contacto@offs.es"
  },
  "license": "SEE LICENSE IN LICENSE",
  "dependencies": {
    "@electron/remote": "^2.1.2",
    "electron-updater": "^6.3.9",
    "qr-code-styling": "^1.9.1"
  },
  "devDependencies": {
    "electron": "^25.9.8",
    "electron-builder": "^25.1.8"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Offensive-Skills/Grafeno.git"
  },
  "bugs": {
    "url": "https://github.com/Offensive-Skills/Grafeno/issues"
  },
  "homepage": "https://github.com/Offensive-Skills/Grafeno#readme",
  "build": {
    "appId": "com.offensiveskills.grafeno",
    "productName": "Grafeno",
    "asar": true,
    "asarUnpack": [
      "scripts/**"
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "Offensive-Skills",
        "repo": "Grafeno"
      }
    ],
    "files": [
      "**/*"
    ],
    "directories": {
      "buildResources": "build"
    },
    "linux": {
      "target": [
        "deb",
        "rpm",
        "appimage"
      ],
      "category": "Utility",
      "icon": "assets/images/logo_grafeno.png"
    }
  }
}
