{
  "name": "grafeno",
  "version": "1.0.6",
  "description": "Aplicaci√≥n para despliegue de entornos simulados de pentesting",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "dist:linux:x64": "electron-builder --linux deb AppImage rpm --x64",
    "dist:linux:arm64": "electron-builder --linux deb AppImage rpm --arm64",
    "dist:mac:arm64": "electron-builder --mac dmg --arm64"
  },
  "keywords": [
    "cibersecurity",
    "ciberseguridad",
    "pentesting",
    "red team",
    "hack",
    "hacking"
  ],
  "author": {
    "name": "Offensive Skills",
    "email": "contacto@offs.es"
  },
  "license": "SEE LICENSE IN LICENSE",
  "dependencies": {
    "@electron/remote": "^2.1.2",
    "electron-updater": "^6.3.9",
    "qr-code-styling": "^1.9.1"
  },
  "devDependencies": {
    "electron": "^25.9.8",
    "electron-builder": "^25.1.8"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Offensive-Skills/Grafeno.git"
  },
  "bugs": {
    "url": "https://github.com/Offensive-Skills/Grafeno/issues"
  },
  "homepage": "https://github.com/Offensive-Skills/Grafeno#readme",
  "build": {
    "appId": "com.offensiveskills.grafeno",
    "productName": "Grafeno",
    "asar": true,
    "asarUnpack": [
      "scripts/**"
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "Offensive-Skills",
        "repo": "Grafeno"
      }
    ],
    "files": [
      "main.js",
      "controllers/**",
      "views/**",
      "assets/**",
      "scripts/**",
      "package.json"
    ],
    "directories": {
      "buildResources": "build"
    },
    "linux": {
      "target": [
        "deb",
        "rpm",
        "AppImage"
      ],
      "category": "Utility",
      "icon": "assets/images/logo_grafeno.png",
      "artifactName": "grafeno_${version}_${arch}.${ext}"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "category": "public.app-category.utilities",
      "artifactName": "grafeno_${version}_mac_${arch}.${ext}"
    }
  }
}

